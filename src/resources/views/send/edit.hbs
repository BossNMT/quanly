<div class="mt-4">
    <h3>Sửa hóa đơn</h3>

    <form method="POST" action="/send/{{hoadon._id}}/update?_method=PUT">
        <div class="form-group">
            <label>Họ Và Tên</label>
            <input type="text" value="{{hoadon.fullname}}" name="fullname" class="form-control" required>
        </div>
        <div class="form-group">
            <label>Số điện thoại</label>
            <input type="number" value="{{hoadon.phone}}" name="phone" class="form-control" required>
        </div>
        <div class="form-group">
            <label>Địa Chỉ</label>
            <input type="text" value="{{hoadon.address}}" name="address" class="form-control" required>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="phuongthuc" id="exampleRadios1"
                            value="Thanh Toán" checked>
                        <label class="form-check-label" for="exampleRadios1">
                            Thanh Toán
                        </label>
                    </div>
                    <div class="form-check">
                        <input data-phuongthuc="{{hoadon.phuongthuc}}" class="form-check-input" type="radio" name="phuongthuc" id="exampleRadios2" value="Nợ">
                        <label class="form-check-label" for="exampleRadios2">
                            Nợ
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Sửa hóa đơn</button>
            </div>
            <div class="col-sm-6">
                <div class="content-gust-total">
                    <p>Tên Sản Phẩm <span id="total-sanpham">{{hoadon.sanpham}}</span></p>
                    <p>Model <span id="total-model">{{hoadon.model}}</span></p>
                    <p>Giá Tiền <span id="total-giatien">{{hoadon.money}}</span></p>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    const fullName = document.querySelector('input[name="fullname"]')
    fullName.onblur = function () {
        fullName.value = fullName.value.toUpperCase()
    }

    const phuongthuc = document.querySelectorAll('.form-check-input')

    if (phuongthuc[1].dataset.phuongthuc == 'Nợ') {
        phuongthuc[0].checked = false
        phuongthuc[1].checked = true
    }
</script>